<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="akaya_regularfont">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/akaya_kanadaka_regular</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="robotoserif_regular">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/robotoserif_regular</item>
        <item name="android:textColor">@color/black_1</item>
    </style>


    <style name="roboto_bold">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/roboto_serif_bold</item>
        <item name="android:textColor">@color/black_1</item>
    </style>

    <style name="roboto_semibold">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/roboto_serif_semibold</item>
        <item name="android:textColor">@color/black_1</item>
    </style>


    <style name="customAlertheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="transparent_dialog_borderless" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>